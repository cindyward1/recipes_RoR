<% content_for(:title, "Edit Recipe | Coolest Recipes") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('KidsCookingColor.jpg', class: 'pull-left', width: '400') %><b>Coolest Recipes</b></h1>
  </div><br>
  <h3><u>Edit an Existing Recipe</u></h3>

  <%= render('layouts/errors', :object => @user) %>

   <h5><b>Enter a new title for your recipe:</b></h5><br>
  <form action="/recipes/<%= @recipe.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
      <%= render('form1') %>
      <%= render('form2d') %>
    <br><br>
    <button class="btn btn-warning">Update Recipe</button>
  </form><br>
  <button class="btn btn-danger"><a href="/recipes/<%= @recipe.id %>"
        data-confirm="Are you sure you want to delete this recipe?"
        data-method="delete" rel="nofollow" style="color: white">Delete Recipe</a></button>
  <br><br><br>
  <hr>
  <h4><a href="/recipes/index">See all the Coolest Recipes</a></h4>
  <h4><a href="/recipes>Add a New Recipe</a></h4>
</div>
