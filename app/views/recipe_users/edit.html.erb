<% content_for(:title, "Edit User | Coolest Recipes") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('KidsCookingColor.jpg', class: 'pull-left', width: '400') %><b>Coolest Recipes</b></h1>
  </div><br>
  <h3><u>Edit an Existing Tag</u></h3>

  <%= render('layouts/errors', :object => @user) %>

   <h5><b>Enter new text for the tag:</b></h5><br>
  <form action="/recipe_users/<%= @user.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
      <%= render('form1a') %>
    <br><br>
    <button class="btn btn-warning">Update User</button>
  </form><br>
  <button class="btn btn-danger"><a href="/recipe_users/<%= @user.id %>"
        data-confirm="Are you sure you want to delete this user?"
        data-method="delete" rel="nofollow" style="color: white">Delete User</a></button>
  <br><br><br>
  <hr>
  <h4><a href="/">Login to Coolest Recipes</a></h4>
  <h4><a href="/recipe_users/new">Register with Coolest Recipes</a></h4>
  <h4><a href="/recipe_users/all">See all Coolest Recipes users</a></h4>
</div>
