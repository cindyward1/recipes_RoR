<% content_for(:title, "New Tag | Coolest Recipes") %>

<h3><u>Create a New Tag</u></h3>

<%= render('layouts/errors', :object => @tag) %>

<h5><b>Enter text for the new tag:</b></h5><br>
<form action="/tags" method="post">
  <%= render('form') %>
