<% content_for(:title, "Edit Tag | Coolest Recipes") %>
<div class='container'>
  <div class='row'>
    <h1><%= image_tag('KidsCookingColor.jpg', class: 'pull-left', width: '400') %><b>Coolest Recipes</b></h1>
  </div><br>
  <h3>Edit an Existing Tag</h3>

  <%= render('layouts/errors', :object => @tag) %>

  <br>
   <h5><b>Enter new text for the tag:</b></h5><br>
  <form action="/tags/<%= @tag.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
      <%= render('form') %>
    <br><br>
    <button class="btn btn-warning">Update Tag</button>
  </form><br>
  <button class="btn btn-danger"><a href="/tags/<%= @tag.id %>"
        data-confirm="Are you sure you want to delete this tag?"
        data-method="delete" rel="nofollow" style="color: white">Delete Tag</a></button>
<br><br><br>
<h4><a href="/tags/new">Create a new tag</a></h4>
<h4><a href="/tags">See all tags</a></h4>
</div>
